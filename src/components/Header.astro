<style>
  header {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-weight: 700;
  }
  header a.current {
    pointer-events: none;
  }
  h1 {
    font-weight: inherit;
    margin: 0 auto 0 0;
  }
  p {
    font-size: 1rem;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    gap: .5em;
    flex-wrap: wrap;
  }
  a {
    display: flex;
    align-items: center;
    justify-content: center;
