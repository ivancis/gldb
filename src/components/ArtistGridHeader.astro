<style>
  section {
    display: grid;
    gap: 1rem;
    max-width: var(--col-size-l);
  }

  h2 {
    margin: 0;
  }
  
  li {
    width: 100%;
    max-width: var(--col-size-m);
    list-style-type: none;
  }

  div {
    display: grid;
    list-style: none;
    align-items: center;
    gap: 1rem;
    margin: 0;
    padding: 0;
  }
  
  div:has(> .search) {
    position: relative;
  }
  div:has(> .search--active) {
    margin-left: 1rem;
  }
  div:has(> .search--active)::before {
    pointer-events: none;
    content: "";
    position: absolute;
    left: -1rem;
    right: -1rem;
    top: -0.5rem;
    bottom: -0.5rem;
    border: 1px solid;
    border-radius: 2rem;
  }
  .search--active {
    &:focus-visible {
      color: inherit;
    }
  }
</style>
<script src="../scripts/gridActions.js"></script>
